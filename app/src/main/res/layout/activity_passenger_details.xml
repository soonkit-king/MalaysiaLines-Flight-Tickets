<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Passenger_Details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/close_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/baseline_airplane_ticket_24" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Passenger Details"
                    android:layout_marginStart="16dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/flightInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:text="Kuala Lumpur (KUL) âœˆ Tokyo (HND)"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:text="22 Dec 19:25 - 23 Dec 05:25"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="16dp"
                    android:text="3 pax"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:background="#FFFFFF"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:background="#CCCCCC"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="Contact details (for all bookings)"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="This is where your confirmation will be sent"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <!-- Red Text: Required Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="*Required field"
                        android:textColor="#D50000"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                    <!-- First Name -->
                    <EditText
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:hint="First name *"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:textColorHint="#757575"
                        android:textColor="#000000"
                        android:background="@drawable/edit_text_background"
                        />

                    <TextView
                        android:id="@+id/first_name_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="*Required field"
                        android:textColor="#FF0000"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <!-- Last Name -->
                    <EditText
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:hint="Last name *"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:textColorHint="#757575"
                        android:textColor="#000000"
                        android:background="@drawable/edit_text_background"
                        />

                    <TextView
                        android:id="@+id/last_name_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="*Required field"
                        android:textColor="#FF0000"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <!-- Email -->
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:hint="Email *"
                        android:textColorHint="#757575"
                        android:inputType="textEmailAddress"
                        android:minHeight="48dp"
                        android:textColor="#000000"
                        android:background="@drawable/edit_text_background"
                        />

                    <TextView
                        android:id="@+id/email_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="*Required field"
                        android:textColor="#FF0000"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <!-- Country of Residence -->
                    <EditText
                        android:id="@+id/country_residence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Country/Region of residence"
                        android:textColorHint="#757575"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:textColor="#000000"
                        android:background="@drawable/edit_text_background"
                        />

                    <!-- Phone Number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <Spinner
                            android:id="@+id/country_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:textColor="#000000"
                            android:background="@android:drawable/spinner_background" />

                        <EditText
                            android:id="@+id/phone_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:hint="Phone number *"
                            android:textColorHint="#757575"
                            android:textColor="#000000"
                            android:inputType="phone"
                            android:background="@drawable/edit_text_background"
                            android:minHeight="48dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/phone_number_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="*Required field"
                        android:textColor="#FF0000"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/next_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="12dp"
                        android:text="Continue to add-ons"
                        android:textColor="@android:color/black"
                        android:background="@drawable/button_background"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:background="#FFFFFF"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passenger 1:"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passenger details must match passport"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender *"
                            android:textColor="#000000"
                            />
                        <RadioButton
                            android:id="@+id/radioButtonMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:layout_marginStart="16dp"
                            android:textColor="#000000"
                            />
                        <RadioButton
                            android:id="@+id/radioButtonFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:layout_marginStart="8dp"
                            android:textColor="#000000"
                            />
                    </LinearLayout>
                    <!-- First Name -->
                    <EditText
                        android:id="@+id/first_name_passenger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First name *"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:textColorHint="#757575"
                        android:textColor="#000000"
                        android:background="@drawable/edit_text_background"
                        android:layout_marginBottom="8dp"
                        />

                    <!-- Last Name -->
                    <EditText
                        android:id="@+id/last_name_passenger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last name *"
                        android:inputType="textPersonName"
                        android:minHeight="48dp"
                        android:textColorHint="#757575"
                        android:textColor="#000000"
                        android:background="@drawable/edit_text_background"
                        android:layout_marginBottom="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of birth *"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        >

                        <EditText
                            android:id="@+id/day"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Day"
                            android:textColorHint="#757575"
                            android:inputType="number"
                            android:textColor="#000000"
                            android:background="@drawable/edit_text_background"
                            android:minHeight="48dp"
                            />
                        <EditText
                            android:id="@+id/month"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Month"
                            android:inputType="number"
                            android:textColorHint="#757575"
                            android:textColor="#000000"
                            android:background="@drawable/edit_text_background"
                            android:minHeight="48dp"
                            android:layout_marginStart="8dp"/>
                        <EditText
                            android:id="@+id/year"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Year"
                            android:textColorHint="#757575"
                            android:inputType="number"
                            android:textColor="#000000"
                            android:background="@drawable/edit_text_background"
                            android:minHeight="48dp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Nationality -->
                    <EditText
                        android:id="@+id/nationality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Nationality *"
                        android:inputType="text"
                        android:textColorHint="#757575"
                        android:textColor="#000000"
                        android:background="@drawable/edit_text_background"
                        android:minHeight="48dp"
                        />
                    <!-- Country of Issue -->
                    <EditText
                        android:id="@+id/country_issue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Country/Region of issue *"
                        android:inputType="text"
                        android:textColorHint="#757575"
                        android:textColor="#000000"
                        android:background="@drawable/edit_text_background"
                        android:minHeight="48dp"
                        />

                    <!-- Passport Number -->
                    <EditText
                        android:id="@+id/passport_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Passport number *"
                        android:inputType="text"
                        android:textColorHint="#757575"
                        android:textColor="#000000"
                        android:background="@drawable/edit_text_background"
                        android:minHeight="48dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Passport expiry date *"
                        android:textColor="#000000"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        >

                        <EditText
                            android:id="@+id/day_expiry"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Day"
                            android:textColorHint="#757575"
                            android:inputType="number"
                            android:textColor="#000000"
                            android:background="@drawable/edit_text_background"
                            android:minHeight="48dp"
                            />
                        <EditText
                            android:id="@+id/month_expiry"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Month"
                            android:textColorHint="#757575"
                            android:inputType="number"
                            android:textColor="#000000"
                            android:background="@drawable/edit_text_background"
                            android:minHeight="48dp"
                            android:layout_marginStart="8dp"/>
                        <EditText
                            android:id="@+id/year_expiry"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Year"
                            android:textColorHint="#757575"
                            android:inputType="number"
                            android:textColor="#000000"
                            android:background="@drawable/edit_text_background"
                            android:minHeight="48dp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>